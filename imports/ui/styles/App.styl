@import '../../variables'

#content
  position fixed
  left $sidebar-width
  top 0
  bottom 0
  right 0
  width auto
  
  overflow auto
  
  transition all $transition-duration ease-out
  transition-property left

  &.sidebar-removed
    left 0

#toggler
  position fixed
  left $sidebar-width
  margin-left 12px
  top 70%
  
  z-index 20000
  
  transition all $transition-duration ease-out
  transition-property left

  &.sidebar-removed
    left 0